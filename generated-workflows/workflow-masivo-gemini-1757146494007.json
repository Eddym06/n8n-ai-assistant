        "startDateTime": "={{new Date().toISOString()}}",
        "endDateTime": "={{new Date(new Date().getTime() + 3600000).toISOString()}}",
        "options": {}
      },
      "credentials": {
        "googleApi": {
          "id": "google_credential_id",
          "name": "Google Account"
        }
      },
      "typeVersion": 1
    },
    {
      "id": "node_1757146493994_t1hyhjn",
      "name": "Send Related Email",
      "type": "n8n-nodes-base.emailSend",
      "position": [
        -140,
        500
      ],
      "parameters": {
        "fromEmail": "noreply@yourcompany.com",
        "toEmail": "related.person@yourcompany.com",
        "subject": "Nueva Interacción Chatbot Telegram: {{$json.message.text.substring(0, 30)}}",
        "text": "Se ha registrado una nueva interacción con el chatbot de Telegram.  Detalles del mensaje: Usuario: {{$json.message.from.first_name}} {{$json.message.from.last_name || ''}} ID de Usuario: {{$json.message.from.id}} Mensaje: {{$json.message.text}}  Se ha creado un evento en Google Calendar.",
        "options": {}
      },
      "credentials": {
        "smtpApi": {
          "id": "smtp_credential_id",
