{
  "manifest_version": 3,
  "name": "n8n AI Assistant - Optimized",
  "version": "4.0.0",
  "description": "Enterprise-grade AI Assistant with Redis caching, analytics dashboard, Slack integration, and advanced optimizations for n8n workflows.",
  "action": {
    "default_popup": "src/popup/index.html",
    "default_title": "n8n AI Assistant - Optimized v4.0",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_ui": {
    "page": "src/options/index.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png",
    "256": "icons/icon256.png"
  },
  "permissions": [
    "storage",
    "notifications",
    "activeTab",
    "scripting",
    "contextMenus",
    "tabs",
    "background",
    "unlimitedStorage",
    "webRequest",
    "webRequestBlocking"
  ],
  "host_permissions": [
    "https://api.openai.com/*",
    "https://api.anthropic.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://api.groq.com/*",
    "https://api.x.ai/*",
    "https://api.github.com/*",
    "https://api.smith.langchain.com/*",
    "http://localhost/*",
    "https://localhost/*",
    "http://127.0.0.1/*",
    "https://127.0.0.1/*",
    "*://*.n8n.cloud/*",
    "*://*.n8n.io/*",
    "*://*/n8n/*"
  ],
  "background": {
    "service_worker": "assets/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
  "*://*.n8n.cloud/workflow/*",
  "*://*.n8n.io/workflow/*",
  "*://*.n8n.cloud/workflows/*",
  "*://*.n8n.io/workflows/*",
  "http://localhost/workflow/*",
  "https://localhost/workflow/*",
  "http://localhost/*/workflow/*",
  "https://localhost/*/workflow/*",
  "http://localhost/workflows/*",
  "https://localhost/workflows/*",
  "http://localhost/*/workflows/*",
  "https://localhost/*/workflows/*"
      ],
      "js": ["assets/content.js"],
      "css": ["assets/content.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/pageBridge.js",
        "src/pageBridge.js",
        "assets/*",
        "icons/*"
      ],
      "matches": [
        "*://*.n8n.cloud/*",
        "*://*.n8n.io/*", 
        "http://localhost/*",
        "https://localhost/*",
        "http://127.0.0.1/*",
        "https://127.0.0.1/*",
        "*://*/n8n/*"
      ]
    }
  ],
  "externally_connectable": {
    "matches": [
      "http://localhost:3000/*",
      "https://localhost:3000/*",
      "http://127.0.0.1:3000/*"
    ]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "n8n-ai-assistant-phase3@example.com",
      "strict_min_version": "109.0"
    }
  }
}